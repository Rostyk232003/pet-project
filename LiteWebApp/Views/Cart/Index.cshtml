@model List<LiteWebApp.ViewModels.CartItemViewModel>

<div class="container mt-5 mb-5">
    <h2 class="mb-4"><i class="bi bi-cart3 me-2"></i>Ваш кошик</h2>

    @if (Model.Any())
    {
        <div class="row">
            @* ЛІВА ЧАСТИНА - СПИСОК ТОВАРІВ *@
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Товар</th>
                                    <th>Ціна</th>
                                    <th>Кількість</th>
                                    <th>Сума</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" style="width: 60px; height: 60px; object-fit: cover;" class="rounded me-3 border">
                                                }
                                                else
                                                {
                                                    <div class="rounded me-3 border bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                }
                                                <span class="fw-bold text-dark">@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("N0")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm border rounded" role="group">
                                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <input type="hidden" name="change" value="-1" />
                                                    <button type="submit" class="btn btn-light border-0 text-secondary fw-bold px-2">-</button>
                                                </form>
                                                <span class="btn btn-light border-0 disabled text-dark fw-bold px-3" style="opacity: 1; background: #fff;">@item.Quantity</span>
                                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <input type="hidden" name="change" value="1" />
                                                    <button type="submit" class="btn btn-light border-0 text-secondary fw-bold px-2">+</button>
                                                </form>
                                            </div>
                                        </td>
                                        <td class="fw-bold">@item.Total.ToString("N0")</td>
                                        <td class="text-end pe-4">
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger border-0 rounded-circle p-2" title="Видалити">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Продовжити покупки
                    </a>
                    <form asp-action="ClearCart" method="post" onsubmit="return confirm('Ви впевнені, що хочете очистити кошик?');">
                        <button type="submit" class="btn btn-link text-danger text-decoration-none small">
                            <i class="bi bi-trash me-1"></i> Очистити кошик
                        </button>
                    </form>
                </div>
            </div>

            @* ПРАВА ЧАСТИНА - ПІДСУМОК *@
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 bg-light p-4 sticky-top" style="top: 2rem; z-index: 1;">
                    <h4 class="mb-4">Разом</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Товари (@Model.Sum(x => x.Quantity)):</span>
                        <span>@Model.Sum(x => x.Total).ToString("N0") грн</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4 text-muted small">
                        <span>Доставка:</span>
                        <span>за тарифами перевізника</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4 align-items-center">
                        <span class="h5 mb-0">До сплати:</span>
                        <span class="h4 mb-0 text-primary fw-bold">@Model.Sum(x => x.Total).ToString("N0") грн</span>
                    </div>

                    <a asp-action="Checkout" class="btn btn-success btn-lg w-100 shadow-sm py-3">
                        Оформити замовлення <i class="bi bi-arrow-right ms-2"></i>
                    </a>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="mt-3 text-center text-muted small">
                            <i class="bi bi-shield-lock"></i> Для оформлення потрібно увійти
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        @* ПОРОЖНІЙ КОШИК *@
        <div class="text-center py-5">
            <div class="mb-4 text-muted" style="opacity: 0.2;">
                <i class="bi bi-cart-x" style="font-size: 5rem;"></i>
            </div>
            <h3 class="fw-bold text-dark">Кошик порожній</h3>
            <p class="text-muted mb-4">Схоже, ви ще нічого не додали. Час виправити це!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary px-5 py-2 shadow-sm">
                Перейти до товарів
            </a>
        </div>
    }
</div>
