@model LiteWebApp.ViewModels.CheckoutViewModel

<div class="container mt-5 mb-5">
    <h2 class="mb-4"><i class="bi bi-bag-check-fill me-2"></i>Оформлення замовлення</h2>

    @* ПІДКАЗКА ДЛЯ КОРИСТУВАЧА *@
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-person-check-fill me-2"></i> Ви увійшли як <strong>@User.Identity.Name</strong>. Ми автоматично заповнили ваші контактні дані.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        @* ЛІВА КОЛОНКА - ФОРМА *@
        <div class="col-md-7 order-md-1">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h4 class="mb-3">Контактні дані</h4>
                    <form asp-action="Checkout" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="FullName" class="form-label">Прізвище та Ім'я</label>
                                <input asp-for="FullName" class="form-control" placeholder="Наприклад: Шевченко Тарас" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Phone" class="form-label">Телефон</label>
                                <input asp-for="Phone" class="form-control" placeholder="+380..." />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="DeliveryAddress" class="form-label">Адреса доставки</label>
                                <input asp-for="DeliveryAddress" class="form-control" placeholder="Місто, відділення Нової Пошти №..." />
                                <span asp-validation-for="DeliveryAddress" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Comment" class="form-label">Коментар до замовлення <span class="text-muted">(необов'язково)</span></label>
                                <textarea asp-for="Comment" class="form-control" rows="3" placeholder="Наприклад: зателефонуйте мені для уточнення деталей"></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-success btn-lg shadow-sm" type="submit">
                            <i class="bi bi-check-circle me-2"></i> Підтвердити замовлення
                        </button>
                        <div class="mt-3 text-center">
                            <a asp-action="Index" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left"></i> Повернутися до кошика
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* ПРАВА КОЛОНКА - ПІДСУМОК *@
        <div class="col-md-5 order-md-2 mb-4">
            <div class="card bg-light border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Ваше замовлення</span>
                        <span class="badge bg-primary rounded-pill">@Model.CartItems.Sum(x => x.Quantity) шт.</span>
                    </h4>
                    <ul class="list-group mb-3 shadow-sm">
                        @foreach (var item in Model.CartItems)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0 text-truncate" style="max-width: 200px;">@item.ProductName</h6>
                                    <small class="text-muted">@item.Quantity x @item.Price.ToString("N0")</small>
                                </div>
                                <span class="text-muted">@item.Total.ToString("N0")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between bg-white fw-bold">
                            <span>Разом (грн)</span>
                            <span class="text-primary">@Model.CartItems.Sum(x => x.Total).ToString("N0")</span>
                        </li>
                    </ul>

                    <div class="card p-3 bg-white border-0 shadow-sm">
                        <div class="d-flex align-items-center text-muted small">
                            <i class="bi bi-truck fs-4 me-3"></i>
                            <div>
                                <strong>Доставка:</strong> Оплата за тарифами перевізника при отриманні.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
