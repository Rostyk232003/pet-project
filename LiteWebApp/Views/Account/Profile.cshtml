@model LiteWebApp.ViewModels.ProfileViewModel

<div class="container mt-5 mb-5">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0 text-center p-4">
                <div class="mb-3 d-flex justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl"
                             class="rounded-circle img-thumbnail"
                             style="width: 150px; height: 150px; object-fit: cover;"
                             alt="Avatar">
                    }
                    else
                    {
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold shadow-sm"
                             style="width: 150px; height: 150px; font-size: 3rem;">
                            @if (!string.IsNullOrEmpty(Model.FirstName))
                            {
                                @Model.FirstName.Substring(0, 1)
                                @(Model.LastName?.Substring(0, 1))
                            }
                            else
                            {
                                <i class="bi bi-person"></i>
                            }
                        </div>
                    }
                </div>
                <h4>@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">@Model.Email</p>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTab" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">Особисті дані</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">Історія замовлень</button>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="tab-content" id="profileTabContent">

                        <div class="tab-pane fade show active" id="info" role="tabpanel">
                            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Ім'я</label>
                                        <input asp-for="FirstName" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Прізвище</label>
                                        <input asp-for="LastName" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Телефон</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="+380..." />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Дата народження</label>
                                        <input asp-for="BirthDate" type="date" class="form-control" />
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label">Змінити фото</label>
                                        <input asp-for="ProfileImage" type="file" class="form-control" accept="image/*" />
                                    </div>

                                    <div class="col-12 mt-4">
                                        <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="orders" role="tabpanel">
                            @if (Model.Orders != null && Model.Orders.Any())
                            {
                                <div class="accordion accordion-flush" id="ordersAccordion">
                                    @foreach (var order in Model.Orders)
                                    {
                                        var uniqueId = "order-" + order.Id; // Генеруємо унікальний ID для HTML

                                        <div class="accordion-item border rounded mb-2 shadow-sm">
                                            <h2 class="accordion-header">
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@uniqueId">
                                                    <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                                        <span>
                                                            <strong>№ @order.Id.ToString().Substring(0, 8)</strong>
                                                            <span class="text-muted small ms-2">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                                                        </span>
                                                        <span class="badge @(order.Status == "Нове" ? "bg-info" : "bg-success") rounded-pill">
                                                            @order.Status
                                                        </span>
                                                        <span class="fw-bold text-dark">
                                                            @order.TotalAmount.ToString("N0") ₴
                                                        </span>
                                                    </div>
                                                </button>
                                            </h2>
                                            <div id="@uniqueId" class="accordion-collapse collapse" data-bs-parent="#ordersAccordion">
                                                <div class="accordion-body bg-light">

                                                    <p class="mb-2"><strong>Адреса доставки:</strong> @order.Address</p>
                                                    @if (!string.IsNullOrEmpty(order.Comment))
                                                    {
                                                        <p class="mb-2 text-muted small"><em>Коментар: @order.Comment</em></p>
                                                    }

                                                    <h6 class="mt-3">Товари в замовленні:</h6>
                                                    <div class="table-responsive">
                                                        <table class="table table-sm table-hover bg-white rounded">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Товар</th>
                                                                    <th class="text-center">Кількість</th>
                                                                    <th class="text-end">Ціна</th>
                                                                    <th class="text-end">Сума</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in order.Items)
                                                                {
                                                                    <tr>
                                                                        <td>@item.ProductName</td>
                                                                        <td class="text-center">@item.Quantity</td>
                                                                        <td class="text-end">@item.Price.ToString("N0")</td>
                                                                        <td class="text-end">@item.Total.ToString("N0")</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr class="fw-bold">
                                                                    <td colspan="3" class="text-end">Разом:</td>
                                                                    <td class="text-end text-primary">@order.TotalAmount.ToString("N0") грн</td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5 text-muted">
                                    <i class="bi bi-cart-x display-4"></i>
                                    <p class="mt-3">Ви ще не робили замовлень.</p>
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">Перейти до покупок</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
