@model LiteWebApp.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "Додати новий товар";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Додавання продукту</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Назва продукту</label>
                            <input asp-for="Name" class="form-control" placeholder="Наприклад: Wacom One" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Категорія</label>
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                <option value="">-- Оберіть категорію --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">Ціна (грн)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="card mb-4 border-0 shadow-sm">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Технічні характеристики</h5>
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="addCharacteristic()">
                                        <i class="bi bi-plus-circle"></i> Додати поле
                                    </button>
                                </div>
                                <div class="card-body">
                                    <div id="characteristics-container">
                                        @if (Model.Characteristics != null && Model.Characteristics.Any())
                                        {
                                            for (int i = 0; i < Model.Characteristics.Count; i++)
                                            {
                                                <div class="row g-2 mb-2 char-row">
                                                    <div class="col-5">
                                                        <input name="Characteristics[@i].Key" value="@Model.Characteristics[i].Key"
                                                               class="form-control form-control-sm" placeholder="Назва (напр. Екран)" />
                                                    </div>
                                                    <div class="col-6">
                                                        <input name="Characteristics[@i].Value" value="@Model.Characteristics[i].Value"
                                                               class="form-control form-control-sm" placeholder="Значення (напр. 10 дюймів)" />
                                                    </div>
                                                    <div class="col-1 text-end">
                                                        <button type="button" class="btn btn-sm btn-outline-danger w-100" onclick="removeRow(this)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <small class="text-muted">Перше поле — це назва характеристики, друге — її значення.</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Опис</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Фото продукту</label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                            <small class="text-muted">Рекомендовано: квадратне фото (напр. 500x500)</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4">Скасувати</a>
                            <button type="submit" class="btn btn-success px-5 shadow-sm">Створити товар</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}