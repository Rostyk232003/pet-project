@model List<LiteWebApp.Core.Entities.Order>
@{
    ViewData["Title"] = "Керування замовленнями";
}

@* --- БЛОК ПОВІДОМЛЕНЬ (Alerts) --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam me-2"></i>Керування замовленнями</h2>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Назад до товарів
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded shadow-sm">
            <i class="bi bi-inbox display-4 text-muted"></i>
            <p class="mt-3 text-muted">Замовлень поки що немає.</p>
        </div>
    }
    else
    {
        <div class="accordion" id="ordersAccordion">
            @foreach (var order in Model)
            {
                // Логіка кольорів для бейджів статусу
                string statusClass = order.Status switch
                {
                    "Нове" => "bg-warning text-dark",
                    "Прийнято" => "bg-info text-white",
                    "Відправлено" => "bg-primary",
                    "Виконано" => "bg-success",
                    "Скасовано" => "bg-danger",
                    _ => "bg-secondary"
                };

                <div class="accordion-item mb-3 border shadow-sm">
                    <h2 class="accordion-header" id="heading-@order.Id">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@order.Id">
                            <div class="d-flex justify-content-between w-100 align-items-center me-3 flex-wrap">
                                <div>
                                    <span class="fw-bold me-2">№ @order.Id.ToString().Substring(0, 8)</span>
                                    <span class="text-muted small me-3"> від @order.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                                    <span class="badge @statusClass rounded-pill">@order.Status</span>
                                </div>
                                <div class="text-end">
                                    <span class="fw-bold text-dark">@order.TotalAmount.ToString("N0") грн</span>
                                    <span class="d-block small text-muted">@order.CustomerName</span>
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse-@order.Id" class="accordion-collapse collapse" data-bs-parent="#ordersAccordion">
                        <div class="accordion-body bg-light">
                            <div class="row">
                                @* --- ЛІВА КОЛОНКА: ДАНІ КЛІЄНТА --- *@
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h6 class="card-title text-muted text-uppercase small fw-bold mb-3">Деталі доставки</h6>
                                            <p class="mb-1"><i class="bi bi-person me-2 text-primary"></i> <strong>Клієнт:</strong> @order.CustomerName</p>
                                            <p class="mb-1"><i class="bi bi-envelope me-2 text-primary"></i> <strong>Email:</strong> @(string.IsNullOrEmpty(order.CustomerEmail) ? "Гість" : order.CustomerEmail)</p>
                                            <p class="mb-1"><i class="bi bi-telephone me-2 text-primary"></i> <strong>Телефон:</strong> @order.Phone</p>
                                            <p class="mb-1"><i class="bi bi-geo-alt me-2 text-primary"></i> <strong>Адреса:</strong> @order.Address</p>
                                            @if (!string.IsNullOrEmpty(order.Comment))
                                            {
                                                <div class="mt-2 p-2 bg-warning bg-opacity-10 rounded border border-warning border-opacity-25">
                                                    <small><strong>Коментар:</strong> @order.Comment</small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @* --- ПРАВА КОЛОНКА: ЗМІНА СТАТУСУ --- *@
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h6 class="card-title text-muted text-uppercase small fw-bold mb-3">Керування статусом</h6>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="orderId" value="@order.Id" />
                                                <label class="form-label small">Змінити статус замовлення:</label>
                                                <div class="input-group">
                                                    <select name="newStatus" class="form-select">
                                                        @foreach (var status in new[] { "Нове", "Прийнято", "Відправлено", "Виконано", "Скасовано" })
                                                        {
                                                            <!option value="@status" @(order.Status == status ? "selected" : "")>@status</!option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-save"></i> Оновити
                                                    </button>
                                                </div>
                                            </form>
                                            <div class="mt-3 d-flex gap-2">
                                                <form asp-action="UndoStatusChange" method="post">
                                                    <input type="hidden" name="orderId" value="@order.Id" />
                                                    <button type="submit" class="btn btn-warning btn-sm"><i class="bi bi-arrow-counterclockwise"></i> Відкотити статус</button>
                                                </form>
                                                <a href="#" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#historyModal-@order.Id"><i class="bi bi-clock-history"></i> Історія</a>
                                            </div>
                                            <!-- Модальне вікно історії -->
                                            <div class="modal fade" id="historyModal-@order.Id" tabindex="-1" aria-labelledby="historyModalLabel-@order.Id" aria-hidden="true">
                                                <div class="modal-dialog modal-lg modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="historyModalLabel-@order.Id">Історія змін статусу</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body p-0">
                                                            @await Html.PartialAsync("_OrderHistory", await Context.RequestServices.GetService<LiteWebApp.Core.Interfaces.IOrderHistoryRepository>().GetHistoryAsync(order.Id))
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* --- ТАБЛИЦЯ ТОВАРІВ --- *@
                            <h6 class="mt-3 mb-2">Товари в замовленні:</h6>
                            <div class="table-responsive bg-white rounded shadow-sm">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 60px;">Фото</th>
                                            <th>Назва товару</th>
                                            <th class="text-center">К-сть</th>
                                            <th class="text-end">Ціна</th>
                                            <th class="text-end">Сума</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.Items)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        <img src="@item.ImageUrl" alt="" class="rounded border" style="width: 40px; height: 40px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded border bg-light d-flex align-items-center justify-content-center mx-auto" style="width: 40px; height: 40px;">
                                                            <i class="bi bi-image text-muted"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td>@item.ProductName</td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">@item.Price.ToString("N0")</td>
                                                <td class="text-end fw-bold">@item.Total.ToString("N0")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-light">
                                            <td colspan="4" class="text-end fw-bold">Загальна сума:</td>
                                            <td class="text-end fw-bold text-primary fs-5">@order.TotalAmount.ToString("N0") грн</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Скрипт для автоматичного закриття повідомлень через 3 секунди
        setTimeout(function() {
            let alerts = document.querySelectorAll(".alert");
            alerts.forEach(function(alert) {
                let bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 3000);
    </script>
}


