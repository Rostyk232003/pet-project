@model LiteWebApp.ViewModels.ProductEditViewModel

<div class="container mt-4">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Редагування: @Model.Name</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImageUrl" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Назва</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold">Категорія</label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-bold">Ціна (грн)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Технічні характеристики</h5>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="addCharacteristic()">
                                <i class="bi bi-plus-circle"></i> Додати поле
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="characteristics-container">
                                @if (Model.Characteristics != null && Model.Characteristics.Any())
                                {
                                    for (int i = 0; i < Model.Characteristics.Count; i++)
                                    {
                                        <div class="row g-2 mb-2 char-row">
                                            <div class="col-5">
                                                <input name="Characteristics[@i].Key" value="@Model.Characteristics[i].Key"
                                                       class="form-control form-control-sm" placeholder="Назва (напр. Екран)" />
                                            </div>
                                            <div class="col-6">
                                                <input name="Characteristics[@i].Value" value="@Model.Characteristics[i].Value"
                                                       class="form-control form-control-sm" placeholder="Значення (напр. 10 дюймів)" />
                                            </div>
                                            <div class="col-1 text-end">
                                                <button type="button" class="btn btn-sm btn-outline-danger w-100" onclick="removeRow(this)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <small class="text-muted">Перше поле — це назва характеристики, друге — її значення.</small>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Опис</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold d-block">Поточне зображення</label>
                    <img src="@Model.ExistingImageUrl" style="width: 100px; height: 100px; object-fit: cover;" class="rounded border mb-2">
                    <label class="form-label fw-bold d-block">Замінити фото (необов'язково)</label>
                    <input asp-for="NewImageFile" type="file" class="form-control" accept="image/*" />
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-50">Назад</a>
                    <button type="submit" class="btn btn-primary w-50">Зберегти зміни</button>
                </div>
            </form>
        </div>
    </div>
</div>
